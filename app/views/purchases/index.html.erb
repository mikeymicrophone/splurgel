<h1>purchases</h1>

<table>
  <tr>
    <th>User</th>
    <th>purchased</th>
    <th>shipping address</th>
    <th>Approved</th>
    <th>Complete</th>
  </tr>

<% for purchase in @purchases %>
  <tr>
    <td><%= link_to_name purchase.user %></td>
    <td><%= link_to_name purchase.offering.product %> from <%= link_to_name purchase.offering.location %></td>
    <td><%= link_to_name purchase.address %></td>
    <td><%=h purchase.approved %></td>
    <td><%=h purchase.complete %></td>
    <td><%= link_to 'show', purchase %></td>
    <td><%= link_to 'edit', edit_purchase_path(purchase) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'new purchase', new_purchase_path %>
