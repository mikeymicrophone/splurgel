<h1>authorizations</h1>

<table>
  <tr>
    <th>user</th>
    <th>authorization type</th>
    <th>target type</th>
    <th>target</th>
  </tr>

<% for authorization in @authorizations %>
  <tr>
    <td><%= link_to_name authorization.user, 'login' %></td>
    <td><%= Authorization.type_hash[authorization.authorization_type] %></td>
    <td><%=h authorization.target_type %></td>
    <td><%= link_to_name authorization.target %></td>
    <td><%= link_to 'show', authorization %></td>
    <td><%= link_to 'edit', edit_authorization_path(authorization) if logged_in? && current_user.id == authorization.authorizer_id %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'new authorization', new_authorization_path %>
