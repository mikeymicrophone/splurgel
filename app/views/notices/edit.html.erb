  <p>
    <%= f.label :target_id %><br />
    <%= f.text_field :target_id %>
  </p>
  <p>
    <%= f.label :followed_type %><br />
    <%= f.text_field :followed_type %>
  </p>
  <p>
    <%= f.label :followed_id %><br />
    <%= f.text_field :followed_id %>
  </p>
  <p>
    <%= f.label :secondary_targets %><br />
    <%= f.text_field :secondary_targets %>
  </p>
  <p>
    <%= f.label :user_id %><br />
