<% form_for(@notice) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </p>
  <p>
    <%= f.label :short_version %><br />
    <%= f.text_field :short_version %>
  </p>


  <p>
    <%= f.label :target_type %><br />
