<h1>new offering</h1>

<% form_for(@offering) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :product_id %><br />
    <%= f.select :product_id, Product.map_name_and_id %>
  </p>
  <p>
    <%= f.label :location_id %><br />
    <%= f.select :location_id, Location.map_name_and_id %>
  </p>
  <p>
    <%= f.label 'how many in stock' %><br />
    <%= f.text_field :stock, :length => 8 %>
  </p>
  <p>
    <%= f.submit 'done-zo' %>
  </p>
<% end %>

<%= link_to 'offerings', offerings_path %>
<%= link_to_backup %>
