<h1>listings keep track of which items are on have and want and like lists</h1>

<table>
  <tr>
    <th>List type</th>
    <th>Product</th>
    <th>Brand</th>
    <th>Store</th>
    <th>User</th>
    <th>Private</th>
  </tr>

<% for listing in @listings %>
  <tr>
    <td><%=h listing.list_type %></td>
    <td><%= link_to listing.product.name, listing.product %></td>
    <td><%= link_to listing.brand.name, listing.brand %></td>
    <td><%= link_to listing.store.name, listing.store %></td>
    <td><%= link_to listing.user.name, listing.user %></td>
    <td><%=h listing.private %></td>
    <td><%= link_to 'show', listing %></td>
    <td><%= link_to 'edit', edit_listing_path(listing) %></td>
    <td><%= link_to 'Destroy', listing, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'new listing', new_listing_path %>
