<h1>images<%= ' for ' + @group.name if @group %></h1>

<% for image in @images %>
  <% content_tag_for :div, image do %>
    <% if image.content_type =~ /image/ %>
      <%= image_tag image.public_filename %>
    <% end %>
    <%= link_to 'show', image %>
    <%= attach_image_link image %><%= attach_image_link nil, image %>
  <% end %>
<% end %>

