<h1>images</h1>

<table>
  <tr>
    <th>Size</th>
    <th>Content type</th>
    <th>Filename</th>
    <th>Height</th>
    <th>Width</th>
    <th>Parent</th>
    <th>Thumbnail</th>
  </tr>

<% for image in @images %>
  <tr>
    <td><%=h image.size %></td>
    <td><%=h image.content_type %></td>
    <td><%=h image.filename %></td>
    <td><%=h image.height %></td>
    <td><%=h image.width %></td>
    <td><%=h image.parent_id %></td>
    <td><%=h image.thumbnail %></td>
    <td><%= link_to 'show', image %></td>
    <td><%= link_to 'edit', edit_image_path(image) %></td>
    <td><%= attach_image_link image %><%= attach_image_link nil, image %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'new image', new_image_path %>
