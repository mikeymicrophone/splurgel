<h1>image_uses keep track of what images are used for</h1>

<table>
  <tr>
    <th>Image</th>
    <th>Target type</th>
    <th>Target</th>
  </tr>

<% for image_use in @image_uses %>
  <tr>
    <td><%= link_to image_use.image.filename, image_use.image %></td>
    <td><%=h image_use.target_type %></td>
    <td><%= link_to 'here', image_use.target %></td>
    <td><%= link_to 'show', image_use %></td>
    <td><%= link_to 'edit', edit_image_use_path(image_use) %></td>
    <td><%= link_to 'Destroy', image_use, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'new image_use', new_image_use_path %>
