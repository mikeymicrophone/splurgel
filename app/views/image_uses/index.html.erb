<h1>image_uses keep track of what images are used for</h1>

<table>
<% for image_use in @image_uses %>
  <tr>
    <td><%= link_to_name image_use.image, 'filename' %></td>
    <td><%=h image_use.target_type %></td>
    <td><%= link_to_name image_use.target %></td>
    <td><%= link_to 'show', image_use %></td>
    <td><%= link_to 'edit', edit_image_use_path(image_use) %></td>
    <td id="<%= dom_id(image_use, 'prioritization') %>"><%= link_to_remote 'make primary', :url => prioritize_image_use_path(image_use), :update => dom_id(image_use, 'prioritization') unless image_use.primary? %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'new image_use', new_image_use_path %>
