<h1>prices are specific to a given location</h1>

<table>
  <tr>
    <th>Offering</th>
    <th>Sale</th>
    <th>End date</th>
  </tr>

<% for price in @prices %>
  <tr>
    <td><%= link_to price.offering.product.name, price.offering %></td>
    <td><%=h price.sale %></td>
    <td><%=h price.end_date %></td>
    <td><%= link_to 'show', price %></td>
    <td><%= link_to 'edit', edit_price_path(price) %></td>
    <td><%= link_to 'Destroy', price, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

