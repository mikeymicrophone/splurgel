<h1>New price</h1>

<% form_for(@price) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :offering_id %><br />
    <%= f.select :offering_id, Offering.map_name_and_id %>
  </p>
  <p>
    <%= f.label :sale %><br />
    <%= f.check_box :sale %>
  </p>
  <p>
    <%= f.label :end_date %><br />
    <%= f.datetime_select :end_date %>
  </p>
  <p>
    <%= f.submit :evaluate %>
  </p>
<% end %>

<%= link_to 'prices', prices_path %>
<%= link_to_backup %>
