<h1> address_use</h1>

<% form_for(@address_use) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :target_type %><br />
    <%= f.select :target_type, AddressUse.targets %>
  </p>
  <p>
    <%= f.label :target_id %><br />
    <%= f.select :target_id, @address_use.target_type.constantize.send('map_name_and_id'), :id => 'target_select' %>
  </p>
  <p>
    <%= f.label :address_id %><br />
    <%= f.select :address_id, Address.map_name_and_id %>
  </p>
  <p>
    <%= f.submit :relocate %>
  </p>
<% end %>

<%= link_to 'show', @address_use %> |
<%= link_to 'address_uses', address_uses_path %>

