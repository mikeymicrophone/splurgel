<h1>schedules can be shared by more than one location</h1>

<table>
  <tr>
    <th>sun</th>
    <th>mon</th>
    <th>tues</th>
    <th>wed</th>
    <th>thurs</th>
    <th>fri</th>
    <th>sat</th>
    <th>holidays</th>
  </tr>

<% for schedule in @schedules %>
  <tr><%= schedule_view schedule %></tr>
  <tr>
    <td><%= schedule.sunday_open.strftime('%l:%M') + '-' + schedule.sunday_close.strftime('%l:%M') %></td>
    <td><%= schedule.monday_open.strftime('%l:%M') + '-' + schedule.monday_close.strftime('%l:%M') %></td>
    <td><%= schedule.tuesday_open.strftime('%l:%M') + '-' + schedule.tuesday_close.strftime('%l:%M') %></td>
    <td><%= schedule.wednesday_open.strftime('%l:%M') + '-' + schedule.wednesday_close.strftime('%l:%M') %></td>
    <td><%= schedule.thursday_open.strftime('%l:%M') + '-' + schedule.thursday_close.strftime('%l:%M') %></td>
    <td><%= schedule.friday_open.strftime('%l:%M') + '-' + schedule.friday_close.strftime('%l:%M') %></td>
    <td><%= schedule.saturday_open.strftime('%l:%M') + '-' + schedule.saturday_close.strftime('%l:%M') %></td>
    <td><%= schedule.holidays? ? '' : 'not ' %>open on holidays</td>
    <td><%= link_to 'show', schedule %></td>
    <td><%= link_to 'edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'locations with this schedule', schedule_locations_path(schedule) %></td>
  </tr>
<% end %>
</table>

<br />

