<h1>what's in stock</h1>

<% form_for @stock do |f| %>
  <%= f.error_messages %>

	<% if @stock.offering %>
	  <%= f.hidden_field :offering_id %>
	<% else%>
  <p>
    <%= f.select :offering_id, Offering.map_name_and_id %><%= f.label :offering_id, 'offering' %>
  </p>
	<% end %>
  <p>
    <%= f.select :style_id, Style.map_name_and_id %><%= f.label :style_id, 'style' %>
  </p>
	<p>
		how many?	<%= text_field :how, :many, :size => 3 %> in 
    <%= f.submit "stock" %>
  </p>
<% end %>
