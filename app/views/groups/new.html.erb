<h1> group</h1>

<% form_for(@group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.text_field :name %><%= f.label :name, 'name' %>
  </p>
    <%= f.hidden_field :administrator_id, :value => current_user.id %>
  <p>
    <%= f.select :group_type, Group.group_types %><br>
		<em style='font-size:0.8em;'>personal lists are viewable by you only, private groups by members only;<br>
		users don't have to accept invites for you to add them to personal or unconsentual lists.</em>
  </p>
  <p>
    <%= f.submit :gather %>
  </p>
<% end %>

<%= link_to 'groups', groups_path %>

