<h1>New group</h1>

<% form_for(@group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :administrator_id %><br />
    <%= f.select :administrator_id, User.map_name_and_id %>
  </p>
  <p>
    <%= f.label :group_type %><br />
    <%= f.select :group_type, [['personal', 1], ['private', 2], ['unconsensual', 3], ['consensual', 4]] %>
  </p>
  <p>
    <%= f.submit :gather %>
  </p>
<% end %>

<%= link_to 'groups', groups_path %>
