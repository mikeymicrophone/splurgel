<h1>taggings keep track of which tags are on which objects</h1>

<table>
  <tr>
    <th>Tag</th>
    <th>Target type</th>
    <th>Target</th>
  </tr>

<% for tagging in @taggings %>
  <tr>
    <td><%=h tagging.tag.name %></td>
    <td><%=h tagging.target_type %></td>
    <td><%= link_to 'here' tagging.target %></td>
    <td><%= link_to 'show', tagging %></td>
    <td><%= link_to 'edit', edit_tagging_path(tagging) %></td>
    <td><%= link_to 'Destroy', tagging, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'new tagging', new_tagging_path %>
