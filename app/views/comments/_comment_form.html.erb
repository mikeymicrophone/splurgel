<% form_remote_for Comment.new, :update => dom_id(obj, 'comments_on'), :position => :bottom, :loading => "$('#{dom_id(obj, 'body')}').clear()" do |f| %>
  <%= f.text_field 'body', :id => dom_id(obj, 'body') %>
  <% if obj %>
    <%= f.hidden_field :target_type, :value => obj.class.name %>
    <%= f.hidden_field :target_id, :value => obj.id %>
  <% end %>
  <%= f.submit 'that is what I think' %>
<% end %>
