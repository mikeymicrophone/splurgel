<h1> message</h1>

<% form_for(@message) do |f| %>
  <%= f.error_messages %>

  <p>what it is:<br>
    <%= f.text_area :body %>
  </p>
  <% unless @message.recipient %>
	  <p>
	    to:<%= f.select :recipient_id, User.map_name_and_id('login') %>
	  </p>
	<% else %>
	  <%= f.hidden_field :recipient_id %>
	<% end %>
	<%= f.hidden_field :reply_id %>
  <p>
    <%= f.submit :bestow %>
  </p>
<% end %>

<%= link_to 'messages', messages_path %>
<%= link_to_backup %>
