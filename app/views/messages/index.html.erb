<h1>messages</h1>

<table>
  <tr>
    <th>Body</th>
    <th>User</th>
    <th>Reply</th>
    <th>Read on</th>
  </tr>

<% for message in @messages %>
  <tr>
    <td><%=h message.body %></td>
    <td><%= link_to_name message.user %> to <%= link_to_name message.recipient %></td>
    <td><%= link_to_name message.reply, 'subject' %></td>
    <td><%=h message.read_on %></td>
    <td><%= link_to 'show', message %></td>
    <td><%= link_to 'edit', edit_message_path(message) %></td>
    <td><%= attach_image_link message %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'new message', new_message_path %>
