<h1>messages</h1>

<table>
  <tr>
    <th>Body</th>
    <th>User</th>
    <th>Reply</th>
    <th>Read on</th>
  </tr>

<% for message in @messages %>
  <tr>
    <td><%=h message.body %></td>
    <td><%= link_to message.user.name, message.user %> to <%= link_to message.recipient.name, message.recipient %></td>
    <td><%= link_to message.reply.subject, message.reply if message.reply %></td>
    <td><%=h message.read_on %></td>
    <td><%= link_to 'show', message %></td>
    <td><%= link_to 'edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'new message', new_message_path %>
